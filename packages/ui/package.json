{
  "name": "wearejobpilot",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "cd apps/web && npm run build",
    "dev": "cd apps/web && npm run dev",
    "start": "cd apps/web && npm run start",
    "build:ui": "cd packages/ui && npm install && npm run build",
    "build:all": "npm run build:ui && npm run build",
    "prebuild": "npm run build:ui"
  },
  "dependencies": {
    "next": "15.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "packageManager": "npm@10.0.0"
}
